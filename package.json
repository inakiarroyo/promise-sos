{
  "name": "promise-sos",
  "version": "1.0.0",
  "description": "Helpers for using promise",
  "author": "Inaki Arroyo <dev@inakiarroyo.com> (http://inakiarroyo.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:iarroyo5/promise-sos.git"
  },
  "engines": {
    "node": ">=18"
  },
  "main": "./build/cjs/index.js",
  "module": "./build/esm/index.js",
  "types": "./build/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./build/cjs/index.js",
      "import": "./build/esm/index.js",
      "types": "./build/types/index.d.ts"
    }
  },
  "files": [
    "build/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "promise",
    "promises",
    "utils",
    "helpers",
    "typescript"
  ],
  "scripts": {
    "isready": "yarn lint && yarn test && yarn build",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "release:test": "yarn build && npm pack",
    "release": "yarn build && npm publish .",
    "test:coverage": "jest --coverage",
    "test:coverage:lcovonly": "jest --coverage --coverageReporters=lcovonly",
    "test": "jest",
    "clean": "rimraf build",
    "build": "yarn clean && tsc -p tsconfig.cjs.json && tsc -p tsconfig.esm.json && tsc -p tsconfig.types.json",
    "build:watch": "tsc -p tsconfig.esm.json --watch"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.6.0"
  }
}
